@model List<Blog>

    <table class="table">
        <thead>
            <tr> 
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Photo</th>
                <th>PublishDate</th>
                <th>ModifiedOn</th>

            </tr>


        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <img width="100" src="@item.PhotoUrl" />
                    </td>
                    <td>@item.ModifiedOn</td>
                    <td>@item.PublishDate</td>


                </tr>
            }

        </tbody>


    </table>
